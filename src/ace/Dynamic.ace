$Modifiable = package unsafe bootstrap Modifiable

Class {
	$value = Modifiable :
	
	:this *$ {
		value get
	}
	
	:this = {{
		(. ~= Dynamic) ?? {
			value set *.
	 	} ~ {
	 		value set (.)
		}
	}}
	
	:this =+ {{
		value set (value get + .)
	}}
	
	:this =+ {{
		value set (value get - .)
	}}
	
	{
		value get .
	}
}