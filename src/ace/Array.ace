>Memory = package unsafe Memory

Class {
	>length = :length
	
	>get = (
		: ~= Iterator ? {
			>backing = Memory length
			>index = Dynamic 0
			
			: for {
				backing set index .
				
				index =+ 1
			}
			
			backing get
		}
		
		:get
	)
	
	:this first {
		get 0
	}
	
	:this second {
		get 1
	}
	
	:this third {
		get 2
	}
	
	:this last {
		get (value length - 1)
	}
	
	:this length {
		length
	}
	
	:this `>` {
		:this map {>.}
	}
	
	:this = {{
		:this for {
			. = .. .index
		}
	}}
	
	:this map {{
		>cb = .
		>mem = Memory length
		
		length times for {
			mem set . (cb (get .))
		}
		
		Array Object {
			:this length {length}
			mem
		}
	}}
	
	:this + {{
		>newLength = length + .length
		>mem = Memory newLength
		
		length times for {
			mem set . (get .)
		}
		
		.length times for {
			mem set (. + length) (.. .)
		}
		
		Array Object {
			:this length {newLength}
			mem
		}
	}}
	
	:this for {{
		>cb = .
		
		>loop = {
			>index = .
			
			index < length ? {
				cb (Object {
					:this index {index}
					{get index .}
				})
				
				loop (. + 1)
			}
		}
		
		loop 0
	}}
	
	:this toString {
		>str = Dynamic '['
		
		:this for {
			str =+ .toString
			
			.index < (length - 1) ? {
				str =+ '; '
			}
		}
		
		str + ']'
	}
	
	:this (Integer) {
		get .
	}
	
	(
		>walk = {
			>index = .
			
			index == length !? {
				{. (get index) (walk (index + 1))}
			}
		}
		
		Iterator (walk 0)
	)
}