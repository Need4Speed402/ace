test {
	name 'effects in assign name'
	case {
		[assign] ([console] hello)
	}
	expect "
		hello
		
	`"
}

test {
	name 'effects in assign value'
	case {
		[assign] void ([console] hello)
	}
	expect "
		hello
		
	`"
}

test {
	name 'effects in assign name and value'
	case {
		[assign] ([console] hello) ([console] world)
	}
	expect "
		hello
		world
		
	`"
}

test {
	name 'assign inherits value correctly'
	case {
		[console] ([assign] hello world)
	}
	expect "
		hello
		
	`"
}

test {
	name 'assign still inhibits behavior of value'
	case {
		[root Scope] ([assign] hello {[console] hello})
	}
	expect "
		hello
		
	`"
}

test {
	name 'assign identifier indirection'
	case {
		[console] ([assign] ([root Function] void {param} void) root)
	}
	expect "
		param
		
	`"
}

test {
	name 'assign full test'
	case {
		[console] ([assign] hello {world}) [console]
	}
	expect "
		hello
		world
		
	`"
}

test {
	name 'assign from function param'
	case {
		[console] (([root Function] param {
			[assign] param void
		}) stuff)
	}
	expect "
		stuff
		
	`"
}

test {
	name 'assign both params from function'
	case {
		([root Function] param {
			([root Function] extend {
				[console] ([assign] param extend) [console]
			})
		}) hello {world}
	}
	expect "
		hello
		world
		
	`"
}

test {
	name 'assign both params from function environment wrap'
	case {
		([root Function] param {
			([root Function] extend {
				[console] ([assign] param {extend}) [console]
			})
		}) hello world
	}
	expect "
		hello
		world
		
	`"
}

test {
	name 'simple assign and compare success'
	case {
		[console] ([compare] ([assign] hello world) ([assign] hello world) true false)
	}
	expect "
		true
		
	`"
}

test {
	name 'simple assign and compare failure'
	case {
		[console] ([compare] ([assign] hello world) ([assign] world hello) true false)
	}
	expect "
		false
		
	`"
}

test {
	name 'simple assign and compare common value'
	case {
		[console] ([root Function] param {
			[compare] ([assign] param void) ([assign] param void) true false
		} hello)
	}
	expect "
		true
		
	`"
}